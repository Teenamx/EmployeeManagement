@model EmployeeCreateViewModel

@{ 
    ViewBag.Title = "Create Employee";
}
<form asp-controller="Home" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row mb-2 mt-2 align-items-center">
        <div class="col-sm-2 ">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-2  align-items-center">
        <div class="col-sm-2 ">
            <label asp-for="Email" class="col-form-label"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-2  align-items-center">
        <div class="col-sm-2 ">
            <label asp-for="Department"></label>
        </div>
        <div class="col-sm-10 ">
            <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()" class="form-control">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-2  align-items-center">
        <div class="col-sm-2 ">
            <label asp-for="Photo" class="col-form-label"></label>
        </div>
        <div class="col-sm-10">
            <input type="file" name="Photo" class="form-control" multiple  />
           
        </div>
    </div>
    @*<div class="row g-3 align-items-center">
            <div class="col-auto">
                <label for="inputPassword6" class="col-form-label">Password</label>
            </div>
            <div class="col-auto">
                <input type="password" id="inputPassword6" class="form-control" aria-describedby="passwordHelpInline">
            </div>
        </div>*@
    <div asp-validation-summary="All" class="text-danger">

    </div>

    <div class="row">
        <div class="col-sm-10 ">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>

 