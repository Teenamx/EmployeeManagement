@model EditUserViewModel
@{ 
    ViewBag.Title = "Edit User";
}

<h1>Edit User</h1>
<form method="post" class="mt-3">
    <div class="row">
        <label class="col-md-2 col-form-label" asp-for="Id"></label>
        <div class="col-md-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="row mt-2">
        <label class="col-md-2 col-form-label" asp-for="Email"></label>
        <div class="col-md-10">
            <input asp-for="Email"  class="form-control" />
        </div>

    </div>
    <div class="row mt-2">
        <label class="col-md-2 col-form-label" asp-for="UserName"></label>
        <div class="col-md-10">
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

    </div>
    <div class="row mt-2">
        <label class="col-md-2 col-form-label" asp-for="City"></label>
        <div class="col-md-10">
            <input asp-for="City"  class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListUsers" class="btn btn-primary">Cancel</a>
        </div>
    </div>
    <div class="card mt-3">
        <div class="card-header">
            <h3>User Roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" style="width:auto">Manage Roles</a>
        </div>
    </div>
    <div class="card mt-3">
        <div class="card-header">
            <h3>User Claims</h3>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                foreach (var claim in Model.Claims)
                {
                    <h5 class="card-title">@claim</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" style="width:auto">Manage Claims</a>
        </div>
    </div>
</form>